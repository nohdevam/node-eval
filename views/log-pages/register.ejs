
  <%- include('../partials/_head'); %>

        <h2 class="text-center">Register Form</h2>

                    <form action="/users" method="POST" id="register">
                    <div class="new_user">
                        <div class="form-group">
                            <label for="email" class="login-text">Email</label>
                            <input type="text" name="email" value="" placeholder="example@gmail.com">
                        </div>
                        <div class="form-group">
                            <label for="password" class="login-text">Password</label>
                            <input type="password" name="password" value="" placeholder="password" id="myPws">
                            <input type="checkbox" onclick="passHide()"><span class="text-pws">Show Password</span>
                        </div>
                        <div class="form-group">
                            <label for="title" class="login-text">Title</label>
                            <div class="radio inline">
                                <input type="radio" id="radio-2" name="title" value="M." >
                                <label for="radio-2" class="radio-label">M</label>
                            </div>
                            <div class="radio inline">
                                <input type="radio" id="radio-3" name="title" value="Ms." >
                                <label for="radio-3" class="radio-label">Ms</label>
                            </div>
                        </div>
                        <div class="form-group">
                                <label for="firstName" class="login-text">First Name</label>
                                <input type="text" name="firstName" value="" placeholder="first name">
                        </div>
                        <div class="form-group">
                            <label for="lastName" class="login-text">Last Name</label>
                            <input type="text" name="lastName" value="" placeholder="last name">
                        </div>
                
                        <div class="form-group">
                            <button type="submit" class="btn update">Save</button>
                        </div>
                
                    </div>

                </form>  
               
      

<!-- include head -->
<%- include('../partials/_head'); %>
<!-- /include head -->

<!-- include header -->
<%- include('../partials/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/get-users"><i class="fas fa-angle-double-left"></i> All Users</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" action="/users/<%= user._id %>?_method=PUT" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="text" name="email" value="<%= user.email%>" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <input type="hidden" name="password" value="password" placeholder="password" id="myInput">
        </div>
        <div class="form-group">
            <label for="title" class="text-light">Title</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="title" value="M." <%= user.title == 'M.' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">M.</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="title" value="Ms." <%= user.title == 'Ms.' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Ms.</label>
            </div>
        </div>
        <div class="form-group">
            <label for="firstName" class="text-light">First Name</label>
            <input type="text" name="firstName" value="<%= user.firstName %>">
        </div>
        <div class="form-group">
            <label for="lastName" class="text-light">Last Name</label>
            <input type="text" name="lastName" value="<%= user.lastName %>">
        </div>
        
       

       

        <div class="form-group">
            <button type="submit" class="btn update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('../partials/_footer') %>
<!-- /include footer -->